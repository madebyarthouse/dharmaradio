{
  "name": "dharmaradio",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:update": "drizzle-kit generate",
    "drizzle:migrate:localy": "npx wrangler d1 migrations apply dharmaradio-db --local",
    "drizzle:migrate:remote": "npx wrangler d1 migrations apply dharmaradio-db --remote",
    "d1:new": "npx wrangler d1 create dharmaradio-db",
    "d1:init": "pnpm run migrations:apply && npx wrangler d1 execute dharmaradio-db --file='./fixtures/data.sql'"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.1",
    "@remix-run/cloudflare": "^2.14.0",
    "@remix-run/cloudflare-pages": "^2.14.0",
    "@remix-run/css-bundle": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.3",
    "framer-motion": "^11.11.17",
    "isbot": "^4.4.0",
    "jsdom": "^25.0.1",
    "just-debounce-it": "^3.2.0",
    "linkedom": "^0.18.5",
    "lucide-react": "^0.460.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@remix-run/dev": "^2.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "wrangler": "^3.87.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}