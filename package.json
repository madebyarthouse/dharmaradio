{
  "name": "dharmaradio",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:update": "drizzle-kit generate",
    "drizzle:migrate:local": "npx wrangler d1 migrations apply dharmaradio --local",
    "drizzle:migrate:remote": "npx wrangler d1 migrations apply dharmaradio --remote",
    "d1:init:local": "npx wrangler d1 execute dharmaradio --local --file='./fixtures/dump.sql'"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.13",
    "@remix-run/cloudflare": "^2.17.1",
    "@remix-run/cloudflare-pages": "^2.17.1",
    "@remix-run/css-bundle": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.4",
    "framer-motion": "^11.18.2",
    "isbot": "^4.4.0",
    "jsdom": "^25.0.1",
    "just-debounce-it": "^3.2.0",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.460.0",
    "posthog-js": "^1.268.9",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.20",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251001.0",
    "@remix-run/dev": "^2.17.1",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.28.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^3.114.14"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}